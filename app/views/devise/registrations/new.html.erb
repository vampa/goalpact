<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "pure-form"}) do |f| %>
    
    <%= devise_error_messages! %>
	
	<h2 class="form-title">Sign up</h2>
	<fieldset class="pure-group">
        <%= f.email_field :email, autofocus: true, placeholder: "email@example.com" %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "password (min lenght 8)" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password confirmation" %>
	</fieldset>

    <div><%= f.submit "Sign up" %></div>
<% end %>

<div id="links-wrap">
    <%= render "devise/shared/links" %>
</div>
